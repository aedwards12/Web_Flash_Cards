<div class="container">
  <h1>Quiz Question</h1>
  <p><%= @deck.name %></p>

  <section class="flashcard">
    <div id="card1" class="card">
      <figure class="front">
        <%= @card.question %>
      </figure>
      <figure class="back">
        <%= @card.answer %>
      </figure>
    </div>
  </section>

  <form action="/deck/<%=@deck.id%>/card/<%=@card.id%>/answer" method="post">
    <% @choices.each do |choice| %>
      <input type="radio" name="card[choice]" value="<%= choice %>"><%= choice %><br>
    <% end %>
    <br>
    <input type="submit" value="Submit">
  </form>
</div>
</body>
